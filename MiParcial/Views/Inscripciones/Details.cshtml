@model MiParcial.Models.Inscripcione

@{
    ViewData["Title"] = "Details";
}


@inject IHttpContextAccessor _session;
@* Switch de control layout *@
@{
    string permisosUser = _session.HttpContext.Session.GetString("permisosUser");
}

@switch (permisosUser)
{
    case "Publico":
        Layout = "~/Views/Shared/_LayoutPublico.cshtml";
        break;
    case "Estudiante":
        Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
        break;
    case "Administrador":
        Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
        break;
    default:
        Layout = "~/Views/Shared/_LayoutPublico.cshtml";
        break;
}

<h1>Details</h1>

<div>
    <h4>Inscripcione</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Curso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Curso.NombreCurso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estudiante)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estudiante.Nombre)
        </dd>
    </dl>
</div>
