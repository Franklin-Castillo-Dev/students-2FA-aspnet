@model MiParcial.Models.Curso

@{
    ViewData["Title"] = "Delete";
}

@inject IHttpContextAccessor _session;
@* Switch de control layout *@
@{
    string permisosUser = _session.HttpContext.Session.GetString("permisosUser");
}

@switch (permisosUser)
{
    case "Publico":
        Layout = "~/Views/Shared/_LayoutPublico.cshtml";
        break;
    case "Estudiante":
        Layout = "~/Views/Shared/_LayoutEstudiante.cshtml";
        break;
    case "Administrador":
        Layout = "~/Views/Shared/_LayoutAdministrador.cshtml";
        break;
    default:
        Layout = "~/Views/Shared/_LayoutPublico.cshtml";
        break;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreCurso)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreCurso)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Profesor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Profesor.Id)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="CursoId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
